  <script>
      // Initialize EmailJS
      (function () {
        emailjs.init("mycROjGWRDWy0lQYo"); // Replace with your public key
      })();

      // Send Email
      document
        .getElementById("contactForm")
        .addEventListener("submit", function (event) {
          event.preventDefault();

          emailjs.sendForm("service_4wjrvmg", "template_a2aih08", this).then(
            function () {
              alert("Message sent successfully!");
            },
            function (error) {
              alert("Failed to send message. Try again!");
              console.log(error);
            }
          );
        });
    </script>

    // script used for contact form not worked
